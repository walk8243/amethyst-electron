{
  "name": "amethyst-electron",
  "version": "0.3.0",
  "description": "関係しているGitHubのIssuesを表示・管理するデスクトップアプリ",
  "main": "main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build-icon": "png2icons docs/img/icon.png docs/img/icon -allp -bc -i",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "keywords": [
    "electron",
    "github",
    "issues",
    "desktop-app"
  ],
  "author": "walk8243 <walk8243@gmail.com> (https://walk8243.xyz/)",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.10",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^5.0.1",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "next": "^14.0.4",
    "png2icons": "^2.0.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "mac": {
      "icon": "docs/img/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "docs/img/icon.ico"
    }
  },
  "private": true
}
